---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;

const navigation = [
	...(import.meta.env.DEV
		? [
				{
					title: "Admin",
					href: "/keystatic",
				},
			]
		: []),
	{
		title: "About",
		href: "/about/",
	},
	{
		title: "Contact",
		href: "/contact/",
	},
];
---

<header
	id="top"
	class:list={[
		"flex flex-row items-center justify-between align-middle",
		className,
	]}
	{...Astro.props}
>
	<a href="/" class="relative font-angry tracking-wider italic text-2xl">
		Hack The Winter
	</a>
</header>
