---
import Header from "@/components/ui/Header.astro";
import Footer from "@/components/ui/Footer.astro";
import BaseLayout, { type Props as BaseProps } from "./BaseLayout.astro";
import Navigation from "@/components/ui/Navigation.astro";

export interface Props extends BaseProps {
	class?: string;
	bodyClass?: string;
}

const { class: className, bodyClass, ...props } = Astro.props;
---

<BaseLayout
	class:list={["mx-auto w-full md:max-w-4xl lg:max-w-5xl", bodyClass]}
	{...props}
>
	<Header class="flex-none p-4" />

	<Navigation />

	<main
		class:list={[
			"flex-auto  px-4 py-8",
			"flex flex-col gap-6 md:gap-8 lg:gap-10",
			className,
		]}
	>
		<slot />
	</main>

	<Footer class="flex-none p-4" />
</BaseLayout>

<style>
	body::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url("data:image/svg+xml;base64,");
		pointer-events: none;
		z-index: -1;
	}
</style>
