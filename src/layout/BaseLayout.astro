---
import Fonts from "@/components/partials/Fonts.astro";
import Head, {
	type Props as HeadProps,
} from "@/components/partials/Head.astro";
import "@/styles/global.css";

export interface Props extends HeadProps {
	class?: string;
}

const { class: className, ...props } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark scroll-smooth">
	<head>
		<Head {...props} />
		<Fonts />
	</head>
	<body
		class:list={[
			"min-h-screen z-10",
			"flex flex-col",
			"text-white",
			"bg-black",
			// "bg-radial from-red-900 from-25% via-red-950 via-75% to-black to-125%",
			className,
		]}
	>
		<slot />
	</body>
</html>

