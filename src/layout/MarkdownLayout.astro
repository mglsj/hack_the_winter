---
import PageLayout from "./PageLayout.astro";

interface Props {
	frontmatter: {
		title?: string;
		description?: string;
		bodyClass?: string;
	};
}

const { frontmatter } = Astro.props as Props;
---

<PageLayout title={frontmatter?.title} bodyClass={frontmatter?.bodyClass}>
	<article
		class:list={[
			"min-w-full",
			"prose prose-invert",
			"prose-headings:font-angry prose-headings:italic prose-headings:tracking-widest",
			"prose-h1:text-5xl sm:prose-h1:text-6xl md:prose-h1:text-7xl lg:prose-h1:text-8xl xl:prose-h1:text-9xl prose-h1:text-shadow-lg/50",
			"prose-h2:text-4xl sm:prose-h2:text-5xl md:prose-h2:text-6xl lg:prose-h2:text-7xl xl:prose-h2:text-8xl prose-h2:text-shadow-md/50",
			"prose-h3:text-3xl sm:prose-h3:text-4xl md:prose-h3:text-5xl lg:prose-h3:text-6xl xl:prose-h3:text-7xl prose-h3:text-shadow-sm/50",
			"prose-h4:text-2xl sm:prose-h4:text-3xl md:prose-h4:text-4xl lg:prose-h4:text-5xl xl:prose-h4:text-6xl prose-h4:text-shadow-xs/50",
			"prose-h5:text-xl sm:prose-h5:text-2xl md:prose-h5:text-3xl lg:prose-h5:text-4xl xl:prose-h5:text-5xl prose-h5:text-shadow-2xs/50",
			"prose-h6:text-lg sm:prose-h6:text-xl md:prose-h6:text-2xl lg:prose-h6:text-3xl xl:prose-h6:text-4xl prose-h6:text-shadow-2xs/50",
			"text-base sm:text-lg md:text-xl lg:text-2xl xl:text-3xl text-white",
			"",
			"prose-li:marker:text-white",
		]}
	>
		<slot />
	</article>
</PageLayout>
